<section class="inner-hero-section" >
    {% assign image = section.settings.image %}

    {% if image != blank %}
    <img 
        src="{{ image | img_url: 'master' }}" 
        alt="Hero Background" 
        width="{{ image.width }}" 
        height="{{ image.height }}">
    {% else %}
    <img 
        src="{{ 'default-image.jpg' | asset_url }}" 
        alt="Default Image"
        width="1200" height="600">
    {% endif %}
     

    <div class="container" >
        <div class="row justify-content-center" style="margin-right: 43rem;">
            <div class="col-lg-6 col-md-8 text-center">
                <h1>{{ section.settings.title }}</h1>
                {{ section.settings.description }}
                <a href="{{ section.settings.button_link }}" class="btn btn-secondary">
                    {{ section.settings.button_label }}
                </a>
            </div>
        </div>
    </div>
</section>




{% schema %}
{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Heading Background Image"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Exemple Heading",
            "label": "Heading Title"
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "<p>Example paragraph</p>",
            "label": "Heading Description"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "name": "Simple Hero"
        }
    ]
}
{% endschema %}
