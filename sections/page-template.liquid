{% comment %} {% if section.settings.container == 'container' %}
    {% assign container_class = 'container' %}
{% else %}
    {% assign container_class = '' %}
{% endif %} {% endcomment %}

<div class="{{ section.settings.container}} my-5" style="margin-left: 1rem;">
    <h1>{{ page.title }}</h1>
    {% if section.settings.show_publish_date %}
        <small>{{page.published_at |  date:'%B %d %Y'}}</small>
    {% endif %}
    <div class="my-5" >{{ page.content }}</div>
</div>

{% schema %}
{
    "name": "Page Settings",
    "settings": [
        {
            "type": "select",
            "id": "container",
            "label": "Layout",
            "options": [
                {
                    "value": "container",
                    "label": "Container"
                },
                {
                    "value": "",
                    "label": "No container"
                }
            ],
            "default": "container"
        },
        {
            "type": "checkbox",
            "id": "show_publish_date",
            "default":true,
            "label": "Show Publish Date"
        }
    ]
}
{% endschema %}
