.inner-hero-section {
   position: relative;
   overflow: hidden;
   width: 100%;
   min-height: 400px; /* Garantit que la section a une hauteur */
   display: flex;
   flex-direction: column; /* Garde les éléments alignés verticalement */
   justify-content: center;
   text-align: center;
   padding: 50px 0; /* Ajoute un peu d’espace en haut et en bas */
   
}

.inner-hero-section img {
   position: absolute;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   object-fit: cover; /* Assure que l’image couvre tout */
   z-index: -1; /* L’image passe derrière le texte */
}

.container {
   position: relative;
   z-index: 10; /* S'assure que le texte est au-dessus de l'image */
   max-width: 100%; /* Empêche un rétrécissement inutile */
}

.row {
   margin-left: 0;
   margin-right: 0;
}

.col-lg-6 {
   margin-left: auto;
   margin-right: auto;
}
